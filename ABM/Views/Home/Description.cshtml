@{
	ViewBag.Title = "Nuestra Tienda";
}

<style>
	.map-responsive {
		overflow: hidden;
		padding-bottom: 56.25%;
		position: relative;
		height: 0;
	}

		.map-responsive iframe {
			left: 0;
			top: 0;
			height: 100%;
			width: 100%;
			position: absolute;
		}
</style>

<h2 class="center" style="		padding-bottom: 20px;
