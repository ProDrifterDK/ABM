<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<title>@ViewBag.Title - ABM Distribuidora</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<nav id="main-nav-mobile-and-tablet" class="no-shadows blue darken-3">
		<div id="main-navbar" class="nav-wrapper row">
			<div class="nav-wrapper col s8 m8 l9">
				<a href="#" data-target="main-menu" class="sidenav-trigger show-on-large"><i class="material-icons">menu</i></a>
			</div>
			<div class="nav-wrapper col s2 m2 l1">
				<a href="#">
					<div class="row">
						<div class="col s6 m6 right-align">
							<i class="material-icons">shopping_cart</i>
						</div>
						<div class="col s6 m6 left-align">
							<text id="shopping-cart-quantity">(0)</text>
						</div>
					</div>
				</a>
			</div>
			<div class="nav-wrapper col s2 m2 l2">
				<a href="#">
					<div class="row">
						<div class="col s4 m4 right-align">
							<i class="material-icons">person</i>
						</div>
						<div class="col s8 m8 left-align">
							<text id="customer-name">Vicente</text>
						</div>
					</div>
				</a>
			</div>
		</div>
	</nav>
	<!-- Mobile and Tablet -->
	<div id="content-wrapper-before-mobile-and-tablet" class="hide-on-large-only">
	</div>
	<!-- Desktop -->
	<div id="content-wrapper-before" class="hide-on-med-and-down">
	</div>
	<div id="main" class="container body-content">
		<ul class="sidenav" id="main-menu"></ul>
		<div id="modal-search" class="modal">
			<div class="modal-content">
				<h5>Ingrese su búsqueda</h5>
				<div class="row">
					<form class="col s12 m12 l12">
						<div class="row">
							<div class="input-field col s12 m12 l12">
								<div class="row">
									<div class="col s1 m1 l1 center-align">
										<label class="label-icon prefix" for="search"><i class="material-icons">search</i></label>
									</div>
									<div class="col s11 m11 l11">
										<input id="search" type="search" required>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		@RenderBody()
		<div class="fixed-action-btn click-to-toggle">
			<a href="#modal-search" id="floating-button" class="waves-effect waves-light modal-trigger btn-floating btn-large red">
				<i class="large material-icons">search</i>
			</a>
		</div>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/materialize")
	@RenderSection("scripts", required: false)
	<script>
		$(document).ready(function () {
			$('.sidenav').sidenav();
			$('.modal').modal();
		});
	</script>
</body>
</html>
