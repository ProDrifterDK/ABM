<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<title>@ViewBag.Title - Clientes ABM</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<nav id="main-nav-mobile-and-tablet" class="no-shadows blue darken-3">
		<div id="main-navbar" class="nav-wrapper row">
			<div class="nav-wrapper col s8 m8 l10">
				<a href="#" data-target="main-menu" class="sidenav-trigger show-on-large"><i class="material-icons">menu</i></a>
			</div>
			<div class="nav-wrapper col s4 m4 l2">
				<div class="row">
					<div class="row">
						<div class="col s4 m4 right-align">
							<i class="material-icons">person</i>
						</div>
						<div class="col s8 m8 left-align">
							<text id="customer-name">Vicente</text>
						</div>
					</div>
				</div>
			</div>
		</div>
	</nav>
	<!-- Mobile and Tablet -->
	<div id="content-wrapper-before-mobile-and-tablet" class="hide-on-large-only">
	</div>
	<!-- Desktop -->
	<div id="content-wrapper-before" class="hide-on-med-and-down">
	</div>
	<div id="main" class="container body-content">
		<ul class="sidenav" id="main-menu"></ul>
		@RenderBody()
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/materialize")
	@RenderSection("scripts", required: false)
	<script>
		$(document).ready(function () {
			$('.sidenav').sidenav();
		});
	</script>
</body>
</html>