@model List<ABM.Datos.SQL.TBL_PRODUCTO>

<style>
    .up {
        margin-top: 15px;
    }
</style>
<div class="row">
    <div class="">
        Productos <a id="nuevo" class="right btn" onclick="Crear();"> Nuevo producto <i class="material-icons right">add</i></a>
    </div>
</div>
<hr />

<table id="tblResultado" class="table table-striped table-bordered nowrap">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Detalle</th>
            <th>Precio</th>
            <th>Precio oferta</th>
            <th>Stock</th>
            <th style="width:30px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.pro_nombre</td>
            <td>@item.pro_detalle</td>
            <td>@item.pro_precio</td>
            <td>@item.pro_precio_oferta</td>
            <td>@item.pro_stock</td>
            <td><a href="@Url.Action("EditarProducto")?id=@item.pro_id"><i class="material-icons">edit</i></a></td>
        </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $('#nuevo').click(function () {
            location.href="@Url.Action("EditarProducto")?id=0";
        });
    </script>
}