<style>
	.up {
		margin-top: 15px;
	}
</style>
<div class="row">
	<div class="">
		Productos <a id="nuevo" class="right btn btn-small" onclick="Crear();"> Nuevo producto <i class="fa fa-plus"></i></a>
	</div>
</div>
<hr />

<table id="tblResultado" class="table table-striped table-bordered nowrap">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Detalle</th>
			<th>Precio</th>
			<th>Precio oferta</th>
			<th>Stock</th>
			<th style="width:30px"></th>
		</tr>
	</thead>
</table>

<a class="waves-effect waves-light btn modal-trigger" href="#producto">Modal</a>

<div id="producto" class="modal modal-fixed-footer">
	<div class="modal-content">
		<h4>Editando producto: {Nombre del Producto}</h4>
		
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
		<a href="#!" class="modal-close waves-effect waves-green btn-flat">Guardar</a>
	</div>
</div>

<!-- TODO Arreglar "Stotock" por "Stock" -->
<script>
    $('#tblResultado').DataTable({
        info: true,
        sortable: false,
        responsive: true,
        ordering: true,
        lengthMenu: [10, 20, 50, 100],
        columns: [
            { data: "Nombre" },
            { data: "Detalle" },
            { data: "Precio" },
            { data: "PrecioOferta" },
            { data: "Sotock" },

            {
                sortable: false,
                "render": function (dat, type, full, meta) {

                    var acciones = "<a href='@Url.Action("EditarProducto")'><i class='material-icons'>edit</i></a>"
                    return acciones;
                }
            },
        ],
        sAjaxSource: '@Url.Action("JsonListarTablaProductos")',
        language: {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "No se encontraron resultados",
            "sEmptyTable": "Ningún dato disponible en esta tabla",
            "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sInfoPostFix": "",
            "sSearch": "Buscar:",
            "sUrl": "",
            "sInfoThousands": ",",
            "sLoadingRecords": "Cargando...",
            "oPaginate": {
                "sFirst": "Primero",
                "sLast": "Último",
                "sNext": "Siguiente",
                "sPrevious": "Anterior"
            },
        }
    });
</script>
